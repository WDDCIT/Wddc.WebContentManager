@model Wddc.WebContentManager.Models.WebContent.Careers.WebCareersModel

@{
    ViewBag.Title = "WDDC Careers";
}

@section Styles {

    <link href="https://kendo.cdn.telerik.com/2021.2.511/styles/kendo.default.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2021.2.511/styles/kendo.bootstrap-v4.min.css" rel="stylesheet" type="text/css" />

}

@section Scripts {

    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.0/jquery.validate.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script src="https://kendo.cdn.telerik.com/2021.2.511/js/kendo.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/pagination/pagination.min.js"></script>
    <script src="~/js/pagination/pagination.custom.js"></script>

    <script>

        var clickedActiveAdId = 0, clickedExpiredAdId = 0;
        var startUpdateAd = false;

        $(document).ready(function () {

            prepareLogList();

            if('@ViewBag.response') {
                if ('@ViewBag.response' == "Success") {
                    document.getElementById("danger-alert").style.display = "none";
                    document.getElementById("success-alert").style.display = "inline-block";
                    var alertText = '<strong>Success! </strong>';
                    alertText += '@ViewBag.Message';
                    $("#success-alert").html(alertText);
                    $("#success-alert").fadeTo(8000, 500).slideUp(500, function() {
                        $("#success-alert").slideUp(500);
                    });
                }
                else {
                    document.getElementById("success-alert").style.display = "none";
                    document.getElementById("danger-alert").style.display = "inline-block";
                    var alertText = '<strong>Failure! </strong>';
                    alertText += '@ViewBag.Message';
                    $("#danger-alert").html(alertText);
                    $("#danger-alert").fadeTo(8000, 500).slideUp(500, function() {
                        $("#danger-alert").slideUp(500);
                    });
                }
            } else {
                document.getElementById("success-alert").style.display = "none";
                document.getElementById("danger-alert").style.display = "none";
            }

            if (@Model.WebCareersActive.Count() > 0) {
                document.getElementById("active").checked = true;
                document.getElementById("active-ads").style.display = 'block';
                document.getElementById("expired-ads").style.display = 'none';

                $.get('@Url.Action("GetFirstActiveAd", "Careers")', (data) => {
                     displayActiveAd(data.Ad_ID);
                });
            }
            else {
                if (@Model.WebCareersExpired.Count() > 0) {
                    document.getElementById("expired").checked = true;
                    document.getElementById("active-ads").style.display = 'none';
                    document.getElementById("expired-ads").style.display = 'block';

                    $.get('@Url.Action("GetFirstExpiredAd", "Careers")', (data) => {
                        displayExpiredAd(data.Ad_ID);
                    });
                }
                else {
                    document.getElementById("active").checked = true;
                    document.getElementById("active-ads").style.display = 'block';
                    document.getElementById("expired-ads").style.display = 'none';

                    emptyTab();
                }
            }

            var newEditor = $("#newLongDescription").kendoEditor({
                stylesheets: [
                    "https://demos.telerik.com/kendo-ui/content/web/editor/editorStyles.css"
                ],
                tools: [
                    "bold",
                    "italic",
                    "underline",
                    "justifyLeft",
                    "justifyCenter",
                    "justifyRight",
                    "insertUnorderedList",
                    "createLink",
                    "unlink",
                    "insertImage",
                    "tableWizard",
                    "createTable",
                    "addRowAbove",
                    "addRowBelow",
                    "addColumnLeft",
                    "addColumnRight",
                    "deleteRow",
                    "deleteColumn",
                    "mergeCellsHorizontally",
                    "mergeCellsVertically",
                    "splitCellHorizontally",
                    "splitCellVertically",
                    "tableAlignLeft",
                    "tableAlignCenter",
                    "tableAlignRight",
                    "formatting",
                    {
                        name: "fontName",
                        items: [
                            { text: "Andale Mono", value: "Andale Mono" },
                            { text: "Arial", value: "Arial" },
                            { text: "Arial Black", value: "Arial Black" },
                            { text: "Book Antiqua", value: "Book Antiqua" },
                            { text: "Comic Sans MS", value: "Comic Sans MS" },
                            { text: "Courier New", value: "Courier New" },
                            { text: "Georgia", value: "Georgia" },
                            { text: "Helvetica", value: "Helvetica" },
                            { text: "Impact", value: "Impact" },
                            { text: "Symbol", value: "Symbol" },
                            { text: "Tahoma", value: "Tahoma" },
                            { text: "Terminal", value: "Terminal" },
                            { text: "Times New Roman", value: "Times New Roman" },
                            { text: "Trebuchet MS", value: "Trebuchet MS" },
                            { text: "Verdana", value: "Verdana" },
                        ]
                    },
                    "fontSize",
                    "foreColor",
                    "backColor",
                ]
            });

            $("#newStartDate").kendoDatePicker({
                format: "MMMM dd, yyyy",
                value: new Date()
            });

            $("#newEndDate").kendoDatePicker({
                format: "MMMM dd, yyyy",
                value: new Date()
            });

            $("#newInfoFileUrl").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                document.getElementById("newInfoFileUrlText").value = "wddc_members/CS/Careers/" + fileName;
            });

        })


        $('input[type=radio][name=activeOrExpired]').change(function () {

            var activeOrExpired = document.querySelector('input[name="activeOrExpired"]:checked').value;
            var currentCheckedRadio = document.getElementById("active");

            if (activeOrExpired == "active")
                currentCheckedRadio = document.getElementById("expired")

            if (startUpdateAd) {
                Swal.fire({
                    title: 'Would you like to save changes to this form?',
                    showDenyButton: true,
                    showCancelButton: true,
                    confirmButtonText: `Yes`,
                    denyButtonText: `No`,
                }).then((result) => {
                    if (result.isConfirmed) {
                        currentCheckedRadio.checked = true;
                        document.getElementById("save-ad-btn").click();
                    } else if (result.isDenied) {
                        startUpdateAd = false;
                        Swal.fire('Changes are not saved', '', 'info');
                        switchTabs()
                    } else {
                        currentCheckedRadio.checked = true;
                    }
                })
            }
            else {
                switchTabs();
            }
        });

        function switchTabs() {
            $("#active-ads").toggle();
            $("#expired-ads").toggle();

            var activeOrExpired = document.querySelector('input[name="activeOrExpired"]:checked').value;

            if (activeOrExpired == "active") {
                if (@Model.WebCareersActive.Count() > 0) {
                    if (clickedActiveAdId == 0) {
                        $.get('@Url.Action("GetFirstActiveAd", "Careers")', (data) => {
                            displayActiveAd(data.Ad_ID);
                        });
                    }
                    else {
                        displayActiveAd(clickedActiveAdId);
                    }
                }
                else {
                    emptyTab();
                }
            }
            else {
                if (@Model.WebCareersExpired.Count() > 0) {
                    if (clickedExpiredAdId == 0) {
                        $.get('@Url.Action("GetFirstExpiredAd", "Careers")', (data) => {
                            displayExpiredAd(data.Ad_ID);
                        });
                    }
                    else {
                        displayExpiredAd(clickedExpiredAdId);
                    }
                }
                else {
                    emptyTab();
                }
            }
        }

        function emptyTab() {
            document.getElementById("details-section").style.display = 'none';
            document.getElementById("ad-id").innerHTML = "  ";
            document.getElementById("delete-ad-btn").disabled = true;
        }

        function liActivate(liElement) {

            var activeLi = liElement.parentElement.querySelector('.active');
            activeLi.classList.remove('active');
            liElement.classList.add('active');
        }

        function liLoad(ad_id) {

            document.getElementById("details-section").style.display = 'block';
            document.getElementById("ad-id").innerHTML = ad_id;
            document.getElementById("new-ad-btn").disabled = false;
            document.getElementById("save-ad-btn").disabled = true;
            document.getElementById("delete-ad-btn").disabled = false;

            $('#details-section').load('@Url.Action("CareersEditorPartial")?adId=' + ad_id, () => {
            });
        }

        function displayActiveAd(ad_id) {

            clickedActiveAdId = ad_id;
            liLoad(ad_id);

        }

        function displayExpiredAd(ad_id) {

            clickedExpiredAdId = ad_id;
            liLoad(ad_id);
        }

        function displayActiveListItem(liElement, ad_id) {

            if (startUpdateAd) {
                Swal.fire({
                    title: 'Would you like to save changes to this form?',
                    showDenyButton: true,
                    showCancelButton: true,
                    confirmButtonText: `Yes`,
                    denyButtonText: `No`,
                }).then((result) => {
                    if (result.isConfirmed) {
                        document.getElementById("save-ad-btn").click();
                    } else if (result.isDenied) {
                        startUpdateAd = false;
                        Swal.fire('Changes are not saved', '', 'info');
                        liActivate(liElement);
                        liLoad(ad_id);
                        clickedActiveAdId = ad_id;
                    }
                })
            }
            else {
                liActivate(liElement);
                liLoad(ad_id);
                clickedActiveAdId = ad_id;
            }
        }

        function displayExpiredListItem(liElement, ad_id) {

            if (startUpdateAd) {
                Swal.fire({
                    title: 'Would you like to save changes to this form?',
                    showDenyButton: true,
                    showCancelButton: true,
                    confirmButtonText: `Yes`,
                    denyButtonText: `No`,
                }).then((result) => {
                    if (result.isConfirmed) {
                        document.getElementById("save-ad-btn").click();
                    } else if (result.isDenied) {
                        startUpdateAd = false;
                        Swal.fire('Changes are not saved', '', 'info');
                        liActivate(liElement);
                        liLoad(ad_id);
                        clickedExpiredAdId = ad_id;
                    }
                })
            }
            else {
                liActivate(liElement);
                liLoad(ad_id);
                clickedExpiredAdId = ad_id;
            }
        }

        function performBrowse() {
            document.getElementById("newInfoFileUrl").click();
        }

        function validateAddForm() {

            var newLongDesc = document.forms["addNewAdForm"]["newLongDescription"].value;
            if (newLongDesc.trim() == "") {
                alert("Long Description must be filled out");
                return false;
            }

            var newShortDesc = document.forms["addNewAdForm"]["newShortDescription"].value;
            if (newShortDesc.trim() == "") {
                alert("Short Description must be filled out");
                return false;
            }

            var newContactName = document.forms["addNewAdForm"]["newContactName"].value;
            if (newContactName.trim() == "") {
                alert("Contact Name must be filled out");
                return false;
            }
        }

        function searchNewMember(ele) {

            var link = '@Url.Action("GetMemberName", "Careers")?memberNbr=' + ele.value;
            $.get(link, function (result) {
                document.getElementById("newMemberName").value = result;
            });
        }

        $('#save-ad-btn').click(function (e) {
            var form = document.getElementById("updateAdForm");
            if(validateUpdateForm())
                form.submit();
        });


        $('#delete-ad-btn').click(function (e) {
            var activeOrExpired = document.querySelector('input[name="activeOrExpired"]:checked').value;
            var idToDelete = 0;
            if (activeOrExpired == "active") {
                idToDelete = clickedActiveAdId;
            } else {
                idToDelete = clickedExpiredAdId;
            }

            var deletedMember = document.getElementById("memberNbr").value;

            var confirmDelete = confirm("Confirm deleting ad (Id: " + idToDelete + ")?");
            if (confirmDelete == true) {
                $.post('@Url.Action("DeleteCareer", "Careers")?Id=' + parseInt(idToDelete), (result) => {
                      if (result.success) {
                          alert("Wddc web career was deleted successfully! ");
                          window.location.href = "@Url.Action("Index", "Careers")";
                      } else {
                          alert("Failure deleting Wddc web career");
                          prepareLogList();
                      }

                }).fail((xhr, textStatus, errorThrown) => {
                    alert("Failure deleting Wddc web career. " + `${textStatus} : ${errorThrown}`);
                    prepareLogList();
                });
            }

        });

        function prepareLogList() {
            setupPagination('log', 'log-list', '@Url.Action("Log", "Careers")?referrerUrl=Careers', ['Log', 'Username', 'Created'], 7);
        }


    </script>
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-12 col-lg-12 col-sm-12 col-xl-12 content-center">
            <div class="alert alert-success" id="success-alert" style="display:none"></div>
            <div class="alert alert-danger" id="danger-alert" style="display:none"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-5">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="data-container">
                                        <div class="row tools-row">
                                            <div class="col-lg-6">
                                                <form>
                                                    <label class="radio-inline">
                                                        <input type="radio" id="active" name="activeOrExpired" value="active">Show Active
                                                    </label>
                                                    <label class="radio-inline">
                                                        <input type="radio" id="expired" name="activeOrExpired" value="expired">Show Expired
                                                    </label>
                                                </form>
                                            </div>
                                            <div class="col-lg-6">
                                            </div>
                                        </div>
                                        <div class="panel panel-default">
                                            <div>
                                                <ul id="active-ads" class="list-group" style="display: none;">
                                                    @foreach (var webCareer in Model.WebCareersActive)
                                                    {
                                                        @if (Model.WebCareersActive.First() == webCareer)
                                                        {
                                                            <li class="list-group-item active" onclick="displayActiveListItem(this, '@webCareer.Ad_ID')"> @webCareer.Short_Description</li>
                                                        }
                                                        else
                                                        {
                                                            <li class="list-group-item" onclick="displayActiveListItem(this, '@webCareer.Ad_ID')"> @webCareer.Short_Description</li>
                                                        }

                                                    }
                                                </ul>
                                                <ul id="expired-ads" class="list-group" style="display: none;">
                                                    @foreach (var webCareer in Model.WebCareersExpired)
                                                    {
                                                        @if (Model.WebCareersExpired.First() == webCareer)
                                                        {
                                                            <li class="list-group-item active" onclick="displayExpiredListItem(this, '@webCareer.Ad_ID')"> @webCareer.Short_Description</li>
                                                        }
                                                        else
                                                        {
                                                            <li class="list-group-item" onclick="displayExpiredListItem(this, '@webCareer.Ad_ID')"> @webCareer.Short_Description</li>
                                                        }
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7" style="padding-left: 0px;">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="data-container">
                                        <div class="row tools-row">
                                            <div class="col-lg-6">
                                                <button type="button" id="new-ad-btn" class="btn btn-primary" data-toggle="modal" data-target="#addNewAdModal"><span class="glyphicon glyphicon-file"></span><span class="icon-description">New</span></button>
                                                <button type="button" id="save-ad-btn" class="btn btn-primary" disabled><span class="glyphicon glyphicon-floppy-disk"></span><span class="icon-description">Save</span></button>
                                                <button type="button" id="delete-ad-btn" class="btn btn-primary"><span class="glyphicon glyphicon-trash"></span><span class="icon-description">Delete</span></button>
                                            </div>
                                            <div class="col-lg-6">
                                                <h5 class="pull-right">Ad ID: &nbsp;<span id="ad-id"></span></h5>
                                            </div>
                                        </div>

                                        <div>
                                            <div>
                                                <div id="details-section">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 30px;">
                        <div class="col-lg-2"></div>
                        <div class="col-lg-8">
                            <div id="log" class="content-center">
                                <div class="bs-ObjectList-rows" id="log-list">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="addNewAdModal" tabindex="-1" role="dialog" aria-labelledby="addNewAdModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <span class="modal-title">Add New WDDC Career</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form name="addNewAdForm" method="post" action="@Url.Action("AddCareer", "Careers")" enctype="multipart/form-data" onsubmit="return validateAddForm()">
                <div class="modal-body">
                    <div class="row ">
                        <div class="col-12 col-lg-12 col-sm-12 col-xl-12 ">
                            <div class="card" style="  margin: 0 auto">
                                <div id="new-ad-section">
                                    <div class="demo-section k-content wide">
                                        <div class="row form-row">
                                            <div class="col-lg-2 form-label-col">
                                                <label for="newShortDescription" class="control-label control-label-center">Short Description:</label>
                                            </div>
                                            <div class="col-lg-10">
                                                <input id="newShortDescription" name="newShortDescription" class="form-control" type="text">
                                            </div>
                                        </div>
                                        <div class="row form-row">
                                            <div class="col-lg-2 form-label-col">
                                                <label for="newLongDescription" class="control-label control-label-top">Long Description:</label>
                                            </div>
                                            <div class="col-lg-10">
                                                <textarea id="newLongDescription" name="newLongDescription" style="height:250px;" aria-label="newLongDescription"></textarea>
                                            </div>
                                        </div>
                                        <div class="row form-row">
                                            <div class="col-lg-2 form-label-col">
                                                <label for="newApplicationInstructions" class="control-label control-label-top">Instructions:</label>
                                            </div>
                                            <div class="col-lg-10">
                                                <textarea class="form-control" id="newApplicationInstructions" name="newApplicationInstructions" maxlength="100"></textarea>
                                            </div>
                                        </div>
                                        <div class="row form-row">
                                            <div class="col-lg-2 form-label-col">
                                                <label class="control-label control-label-top">Contact Info:</label>
                                            </div>
                                            <div class="col-lg-10 contactInfo-col">
                                                <div class="row contactinfo-row">
                                                    <div class="col-lg-2">
                                                        <label class="control-label control-label-top-small" for="newMemberNbr">Member Number:</label>
                                                        <input type="text" class="form-control" id="newMemberNbr" name="newMemberNbr" maxlength="5" onchange="searchNewMember(this)">
                                                    </div>
                                                    <div class="col-lg-10">
                                                        <label class="control-label control-label-top-small" for="newMemberName">Member Name:</label>
                                                        <input type="text" class="form-control" id="newMemberName" name="newMemberName" disabled style="color:#888;">
                                                    </div>
                                                </div>
                                                <div class="row contactinfo-row">
                                                    <div class="col-lg-6">
                                                        <label class="control-label control-label-top-small" for="newContactName">Name:</label>
                                                        <input type="text" class="form-control" id="newContactName" name="newContactName" maxlength="50">
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <label class="control-label control-label-top-small" for="newContactTitle">Title:</label>
                                                        <input type="text" class="form-control" id="newContactTitle" name="newContactTitle" maxlength="50">
                                                    </div>
                                                </div>
                                                <div class="row contactinfo-row">
                                                    <div class="col-lg-6">
                                                        <label class="control-label control-label-top-small" for="newContactPhone">Phone:</label>
                                                        <input type="text" class="form-control" id="newContactPhone" name="newContactPhone" maxlength="15">
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <label class="control-label control-label-top-small" for="newContactFax">Fax:</label>
                                                        <input type="text" class="form-control" id="newContactFax" name="newContactFax" maxlength="15">
                                                    </div>
                                                </div>
                                                <div class="row form-row contactinfo-row">
                                                    <div class="col-lg-12">
                                                        <label class="control-label control-label-top-small" for="newContactEmail">Email:</label>
                                                        <input type="email" class="form-control" id="newContactEmail" name="newContactEmail" maxlength="50">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row form-row">
                                            <div class="col-lg-2 form-label-col">
                                                <label for="newInfoFileUrlText" class="control-label control-label-center">Info (File or URL):</label>
                                            </div>
                                            <div class="col-lg-10">
                                                <div class="row" style="display: flex;">
                                                    <div class="col-lg-11">
                                                        <input id="newInfoFileUrlText" name="newInfoFileUrlText" class="form-control" type="text" maxlength="200">
                                                    </div>
                                                    <div class="col-lg-1 control-label-center" style="justify-content: flex-end;">
                                                        <input id="newInfoFileUrl" name="newInfoFileUrl" class="form-control" type="file" style="display:none">
                                                        <button type="button" class="btn btn-light" onclick="performBrowse();" style="margin-right: 0px; padding: 6px 12px;">Browse</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row form-row">
                                            <div class="col-lg-2 form-label-col">
                                                <label for="newStartDate" class="control-label control-label-center">From:</label>
                                            </div>
                                            <div class="col-lg-10">
                                                <input id="newStartDate" name="newStartDate" style="width: 50%" />
                                            </div>
                                        </div>
                                        <div class="row form-row">
                                            <div class="col-lg-2 form-label-col">
                                                <label for="newEndDate" class="control-label control-label-center">Through:</label>
                                            </div>
                                            <div class="col-lg-10">
                                                <input id="newEndDate" name="newEndDate" style="width: 50%" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Add</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </form>

        </div>
    </div>
</div>

